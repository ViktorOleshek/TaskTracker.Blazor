@using Services.ExternalApi

<MudDialog >
    <TitleContent>
        <MudText Typo="Typo.h4">Change email</MudText>
    </TitleContent>

    <DialogContent>
        <MudTextField Label="New Email" @bind-Value=@newEmail Required="true" />
    </DialogContent>

    <DialogActions>
        <MudButton ButtonType=@ButtonType.Button OnClick=@Submit Color=@Color.Primary>Save</MudButton>
        <MudButton ButtonType=@ButtonType.Button OnClick=@Cancel Color=@Color.Secondary>Cancel</MudButton>
    </DialogActions>
</MudDialog>
