@using Services.ExternalApi

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h4">Change email</MudText>
    </TitleContent>

    <DialogContent>
        <MudTextField Label="New Email" @bind-Value="newEmail" Required="true" />
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">Save</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>